{
    "name": "kylint",
    "displayName": "KYLint",
    "description": "KYLint for Visual Studio Code",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src"
    },
    "devDependencies": {
        "@types/vscode": "^1.107.0",
        "@types/node": "22.x",
        "typescript-eslint": "^8.50.1",
        "eslint": "^9.39.2",
        "typescript": "^5.9.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/terachan0117/vscode-kylint.git"
    }
}
